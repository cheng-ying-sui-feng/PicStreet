        <label class="checkbox">
          <% if(pwd!=""){%>
          <input type="checkbox" id="remember" name="remember" value="remember" checked="checked">记住密码
          <%}else{%>
          <input type="checkbox" id="remember" name="remember" value="remember">记住密码
          <%}%>
        </label>
        </div>
        <div class="form-group">
